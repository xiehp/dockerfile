# The FROM instruction sets the Base Image for subsequent instructions.
# Using Nginx as Base Image
FROM ubuntu:18.04

RUN apt-get update

RUN apt-get install apt-utils -y --no-install-recommends
RUN apt-get install wget -y --no-install-recommends

RUN apt-get install lsb-core -y --no-install-recommends
RUN apt-get install curl -y --no-install-recommends

# 安装和ifconfig有关的工具
RUN apt-get install net-tools -y --no-install-recommends

# 安装和ping有关的工具
RUN apt-get install iputils-ping -y --no-install-recommends

RUN apt-get install netcat -y --no-install-recommends
RUN apt-get install telnet -y --no-install-recommends

# nslookup dig
RUN apt-get install dnsutils -y --no-install-recommends

# ip route
RUN apt-get install iproute2 -y --no-install-recommends
